#import "std/mem.lang"
//#import "std/basic.lang"

msg := "Arena allocator from another module\n";
len := msg.length;

proc main() {
	arena: Arena;
	arena.mem = alloc(arena.capacity);
	defer free(arena.mem);

	bytes := arena_alloc(^arena, len+1);
	mem_copy(bytes, msg.data, len);
	bytes[len] = 0;

	print("%s".data, bytes);
}
