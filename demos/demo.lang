#import "std/mem.lang"
#import "std/basic.lang"

proc main() {
	msg := "Hello, world!";

	sub := substring(msg, "Hello".length);
	defer free_substring(sub);

	fmt_string := c_string("%s\n%s\nThe demo:\n\t%s\nI will now print a number: %d\n");
	defer free(fmt_string);

	print(fmt_string, msg.data, sub.data, "Wow printf works".data, 10);
}
