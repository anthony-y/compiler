proc c_str_length(s: ^u8): int {
	new_s: ^u8
	while s {
		s += 1
	}
	return new_s - s
}

proc to_c_string(s: string): ^u8 {
	s : string;
	c_str := cast(^u8)alloc(s.length+1)
	mem_copy(c_str, s.data, s.length)
	//c_str+s.length = 0 // Todo
	c_str[s.length] = 0
	return c_str
}

